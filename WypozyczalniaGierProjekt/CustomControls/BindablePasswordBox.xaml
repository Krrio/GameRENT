<UserControl x:Class="WypozyczalniaGierProjekt.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WypozyczalniaGierProjekt.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <PasswordBox x:Name="txtPassword"
                               FontSize="16"
                               FontWeight="Medium"
                               FontFamily="Poppins"
                               Foreground="White"
                               CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"
                             Padding="35,0,0,0">


        <PasswordBox.Background>
            <ImageBrush ImageSource="/WypozyczalniaGierProjekt;component/Images/user6.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
